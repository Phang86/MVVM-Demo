<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardCornerRadius="12dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:text="服务条款、隐私政策"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请你务必审慎阅读“隐私政策”各条款，包括但不限于：获取定位权限、打开麦克风、读取本地文件。你可以在“设置”中查看、变更、删除个人信息并管理你的授权。"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="使用SDK名称：MobTech+SDK"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:text="服务类型：应用性能监控平台 U-APM"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:text="收集个人信息类型：设备标识符（如 IMEI、ICCID、IMSI、Android ID、GAID）、应用信息（如应用包名、版本号和运行状态）、网络信息（如 IP 或域名连接结果，当前网络类型）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:text="服务条款链接：https://www.mob.com/about/service"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    />

                <TextView
                    android:text="隐私权政策链接：https://www.mob.com/about/policy"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你可阅读"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        />

                    <TextView
                        android:id="@+id/tv_privacy_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《服务条款》、"
                        android:textColor="#31b3f2"
                        android:textSize="@dimen/sp_14"
                        />

                    <TextView
                        android:id="@+id/tv_privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《隐私政策》"
                        android:textColor="#31b3f2"
                        android:textSize="@dimen/sp_14"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="了解详细信息。"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如你同意，请点击“同意”开始接受我们的服务。"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:id="@+id/tv_no_used"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="暂不使用"
                android:textColor="@color/black"
                android:foreground="?attr/selectableItemBackground"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line"
                />

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="同意"
                android:textColor="#31b3f2"
                android:foreground="?attr/selectableItemBackground"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
